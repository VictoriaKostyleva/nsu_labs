<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>


    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimaryInverse">@color/secondary_text</item>
        <item name="actionMenuTextColor">@color/divider</item>
        <item name="android:textColorPrimary">@color/title</item>
        <item name="android:textColorSecondary">@color/menu</item>
    </style>

    <style name="AppTheme.Toolbar.Popup" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@color/secondary_text</item>
        <item name="android:textColorPrimaryInverse">@color/title</item>
        <item name="android:colorBackground">@color/divider</item>
    </style>


</resources>